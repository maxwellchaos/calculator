<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <EditText
            android:id="@+id/editTextExpresion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:hint="45+10*100"
            android:layout_weight="1"
          />

        <EditText
            android:id="@+id/editTextResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="0"
            android:singleLine="false"
            android:layout_weight="1"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/D1"
                android:onClick="clickNum"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1" />
            <Button
                android:id="@+id/D2"
                android:onClick="clickNum"
                android:text="2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/D3"
                android:onClick="clickNum"
                android:text="3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/DivideAction"
                android:onClick="clickNum"
                android:text="/"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <Button
                android:onClick="clickNum"
                android:text="("
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/sinAction"
                android:onClick="clickNum"
                android:text="sin"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/D4"
                android:onClick="clickNum"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4" />
            <Button
                android:id="@+id/D5"
                android:onClick="clickNum"
                android:text="5"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/D6"
                android:onClick="clickNum"
                android:text="6"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/MultiplyAction"
                android:onClick="clickNum"
                android:text="*"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <Button
                android:onClick="clickNum"
                android:text=")"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/cosAction"
                android:onClick="clickNum"
                android:text="cos"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/D7"
            android:onClick="clickNum"
            android:text="7"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             />
        <Button
            android:id="@+id/D8"
            android:onClick="clickNum"
            android:text="8"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/D9"
            android:onClick="clickNum"
            android:text="9"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/MinusAction"
            android:onClick="clickNum"
            android:text="-"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/FactorialAction"
            android:onClick="clickFact"
            android:text="!"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/tgAction"
            android:onClick="clickNum"
            android:text="tg"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Dot"
            android:onClick="clickNum"
            android:text="."
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/D0"
            android:onClick="clickNum"
            android:text="0"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/Percent"
            android:onClick="clickNum"
            android:text="%"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/PlusAction"
            android:onClick="clickNum"
            android:text="+"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/sqrtAction"
            android:onClick="clickSqrt"
            android:text="âˆš"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/LogAction"
            android:onClick="clickNum"
            android:text="log"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Clear"
            android:onClick="clear"
            android:text="AC"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/Back"
            android:text="back\nspace"
            android:onClick="backspace"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/Power"
            android:text="^"
            android:onClick="clickNum"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/Equal"
            android:onClick="equal"
            android:text="="
            android:layout_weight="10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="OnClick" />


    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
